{
	"name": "micropython-replink",
	"displayName": "Micropython-REPLink",
	"description": "Sends commands to a Micropython shell",
	"publisher": "swc-fablab",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/swc-fablab/micropython-replink"
	},
	"engines": {
		"vscode": "^1.31.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.micropython-replink.runScript",
				"title": "Run script on device",
				"category": "Micropython REPL"
			},
			{
				"command": "extension.micropython-replink.saveScript",
				"title": "Save script file on device",
				"category": "Micropython REPL"
			},
			{
				"command": "extension.micropython-replink.runSelected",
				"title": "Run selected text on device",
				"category": "Micropython REPL"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
